{
    "AllowedHosts": "*",
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "weatherroute": {
                "ClusterId": "weathercluster",
                "Match": {
                    "Path": "/gateway/{**catch-all}"
                },
                "Transforms": [
                    { "PathPattern": "{**catch-all}" }
                ]
            }
        },
        "Clusters": {
            "weathercluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://host.docker.internal:5100/"
                    }
                }
            }
        }
    }
}
